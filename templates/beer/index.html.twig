{% extends 'base.html.twig' %}

{% block title %}Beers{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/types">Types</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/beers">Beers</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/breweries">Breweries</a>
      </li>
    </ul>
  </div>
</nav>


  <div align="center"> This is the {{ controller_name }} page !</div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Volume</th>
        <th scope="col">Type</th>
        <th scope="col">Brewery</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    {% for elem in beers %}
      <tr>
        <th scope="row">{{ elem.getId() }}</th>
        <td>{{ elem.getName() }}</td>
        <td>{{ elem.getDescription() }}</td>
        <td>{{ elem.getVolume() }} %</td>
        <td>{% if elem.getType() is not null %}
            {{ elem.getType().getName() }}
            {% endif %}</td>
        <td>{% if elem.getBrewery() is not null %}
            {{ elem.getBrewery().getName() }}
            {% endif %}</td>
        <td><a href="/beers/update_beer/{{ elem.getId() }}"><button type="button" class="btn btn-warning">Update</button></td>
        <td><a href="/beers/delete_beer/{{ elem.getId() }}"><button type="button" class="btn btn-warning">Delete</button></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <div class="button" align="right">
    <a href="/beers/add_beer"><button type="button" class="btn btn-warning">Add a beer</button></a>
  </div>

  {% endblock %}
